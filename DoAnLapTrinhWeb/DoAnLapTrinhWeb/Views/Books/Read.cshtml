<!DOCTYPE html>
<html>
<head>
    <title>Đọc sách</title>
    <style>
        .book {
            width: 600px;
            height: 800px;
            border: 1px solid #ccc;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .book-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .book-content {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            .book-content img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: opacity 0.5s ease;
            }

        .flip-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            padding: 10px;
            background-color: #fff;
            border: none;
            cursor: pointer;
        }

        .next {
            right: 10px;
        }

        .prev {
            left: 10px;
        }
    </style>
</head>
<body>
    <div class="book">
        <h1 class="book-title">Tiêu đề sách</h1>
        <button class="flip-button prev" onclick="prevImage()">&#10094;</button>
        <div class="book-content">
            <img id="book-image" src="" alt="Nội dung sách">
        </div>
        <button class="flip-button next" onclick="nextImage()">&#10095;</button>

    </div>

    <script>
        var images = [
            "/images/Mạnh Tử_page-0001.jpg",
            "/images/Mạnh Tử_page-0002.jpg",
            "/images/Mạnh Tử_page-0003.jpg",
            "/images/Mạnh Tử_page-0004.jpg",
            "/images/Mạnh Tử_page-0005.jpg",
            "/images/Mạnh Tử_page-0006.jpg",
            "/images/Mạnh Tử_page-0007.jpg",
            // Thêm đường dẫn của các hình ảnh khác vào đây
        ];
        // Gửi yêu cầu AJAX để lấy danh sách đường dẫn hình ảnh từ CSDL
        // $.ajax({
        //     url: "/Books/GetImagePaths?sachId=1",
        //     type: "GET",
        //     success: function (data) {
        //         images = data;
        //         showImage(currentImageIndex);
        //     },
        //     error: function () {
        //         console.log("Lỗi khi lấy dữ liệu từ CSDL");
        //     
        // });

        var currentImageIndex = 0;
        var bookImage = document.getElementById("book-image");

        function showImage(index) {
            bookImage.src = images[index];
        }

        function prevImage() {
            currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
            showImage(currentImageIndex);
        }

        function nextImage() {
            currentImageIndex = (currentImageIndex + 1) % images.length;
            showImage(currentImageIndex);
        }

        showImage(currentImageIndex);
    </script>
</body>
</html>