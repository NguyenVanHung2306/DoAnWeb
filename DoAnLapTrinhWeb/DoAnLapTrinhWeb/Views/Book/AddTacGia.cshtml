@model DoAnLapTrinhWeb.Models.tbTacGia
@{
    ViewData["Title"] = "Add Author";
}

<h2>Add Author</h2>
<form asp-action="AddTacGia" method="post">
    <div class="form-group">
        <label asp-for="TenTacGia">Author Name</label>
        <input asp-for="TenTacGia" class="form-control" />
        <span asp-validation-for="TenTacGia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
<a asp-action="Add" onclick="confirmBackToList()">Back to List</a>
<a asp-action="Index" onclick="confirmBackToList()">Home</a>